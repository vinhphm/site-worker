{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx", // ECMAScript target version
    "lib": [
      "ESNext" // Standard library to use
      // "DOM.Iterable",
      // "DOM",
    ],
    "moduleDetection": "force", // JSX compilation style
    "baseUrl": "./",
    // "jsxImportSource": "hono/jsx",
    "module": "ESNext", // Module code generation method
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [ // Path alias configuration
        "./src/*"
      ]
    },
    "resolveJsonModule": true, // How to resolve modules
    "types": [
      "bun-types", // Bun runtime types
      "hono" // Hono framework types
    ], // Allow default imports for CommonJS modules
    "allowJs": true, // Allow importing `.js` from `.ts`
    "checkJs": false, // Ensure consistent casing in file names
    "strict": true, // Skip type checking of declaration files
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": false,
    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false, // Don't type-check .js files
    "noEmit": true, // Ensure each file can be safely transpiled
    "allowSyntheticDefaultImports": true, // Enable importing .json files
    "esModuleInterop": true, // Allow 'import x from y' when module has no default export
    "forceConsistentCasingInFileNames": true, // Don't output files
    "isolatedModules": true, // Enable all strict type checking options
    "skipLibCheck": true
  }
}
