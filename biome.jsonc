{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "extends": ["ultracite"],
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "linter": {
    "rules": {
      "style": {
        "noHeadElement": "off",
        "useFilenamingConvention": "off",
        "noNamespace": "off",
        "useConsistentArrayType": "off",
        "useConsistentMemberAccessibility": "off"
      },
      "correctness": {
        "noUnknownProperty": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noConsole": "off",
        "useAwait": "off",
        "noConfusingVoidType": "off"
      },
      "nursery": {
        "noShadow": "off"
      },
      "complexity": {
        "noStaticOnlyClass": "off",
        "noExcessiveCognitiveComplexity": "off",
        "noBannedTypes": "off"
      },
      "performance": {
        "noImgElement": "off"
      }
    }
  }
}
